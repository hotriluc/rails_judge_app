<%= f.label :name %>
<%= f.text_field :name, class: 'form-control input' %>


<%= f.label :email %>
<%= f.email_field :email, class: 'form-control input' %>

<%= f.label :password %>
<%= f.password_field :password, class: 'form-control input' %>

<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation, class: 'form-control input' %>
<%= f.submit "Submit", class: "btn btn-primary" %>