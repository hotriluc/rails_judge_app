<% provide(:title, @user.name)%>


<div class="user ">



  <h2 class = "user__name"> <%= @user.name %></h2>

  <div class="user__picture">User's Profile Picture</div>

  <% if current_user.teacher? && !(current_user == @user) %>
    <!--      to make sure that teacher can not delete another teacher-->
    <%if !@user.teacher? %>
      <%= link_to "Edit", edit_user_path(@user)%>
      <%= link_to "Delete", @user, method: :delete,
                  data: { confirm: "You sure?" } %>
    <%end %>
  <% end %>

  <p class="user__email">Email: <%= @user.email %></p>

  <ul class="user__actions-list">
  <!--  visible only for teacher-->
  <% if current_user.teacher?%>
    <p class="user__role">Role: Teacher</p>

      <li><%= link_to "Create student", new_user_path, class: 'btn btn-dark'%></li>
      <li><%= link_to "Create group", new_group_path,  class: 'btn btn-dark'%></li>

  <%else %>
    <p class="user__role">Role: Student</p>
  <%end %>
    <li><%= link_to "My groups", my_groups_path,  class: 'btn btn-dark'%></li>
    </ul>


</div>



