<% if current_user.teacher? %>
  <%= link_to "Edit task", edit_task_path(@group.id, task_id: @task)%>
  <%= link_to "Delete", delete_task_path(@group.id, task_id: @task), method: :delete,data: { confirm: "You sure?" } %>
<%end %>

<h1 class="heading-1"><%=@task.name %></h1>
<h3>Programming language: <%=@task.language %></h3>
<h3>Description</h3>
<p><%=@task.description %></p>

<!--link to solution new form passing the task id-->
<%=link_to "Apply solution", new_solution_path(@group.id, task_id: @task), class: 'btn-dark'%>

<!--show user's solutions for current task-->
<%=link_to "My solutions", my_solutions_path(@group.id, task_id: @task), class: 'btn-dark'%>

<%if current_user.teacher? %>
<%=link_to "All final Solutions", solutions_path(@group.id, task_id: @task), class: 'btn-dark' %>
<%end %>
